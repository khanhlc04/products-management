extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug

block main 
    +alert-success(5000)
    
    .section-products-featured.my-5
        .container
            .row
                .col-12
                    +box-head("Sản phẩm nổi bật")

            .row
                if(productsFeatured.length > 0)
                    each item in productsFeatured
                        .col-4.mb-3
                            .product-item
                                .inner-image
                                    img(src=item.thumbnail, alt=item.title)
                                .inner-content
                                    h3.inner-title
                                        a(href=`/products/detail/${item.slug}`) #{item.title}
                                    .inner-price-new #{item.priceNew}$
                                    .inner-price-old #{item.price}$
                                    .inner-discount -#{item.discountPercentage}%
                else 
                    div(class="col-12")
                        div(class="alert alert-danger") Không tìm thấy sản phẩm nào.!

    .section-products-featured.my-5
        .container
                .row
                    .col-12
                        +box-head("Sản phẩm mới")
                if(productsNew.length > 0)
                    .row
                        each item in productsNew
                            .col-4.mb-3
                                .product-item
                                    .inner-image
                                        img(src=item.thumbnail, alt=item.title)
                                    .inner-content
                                        h3.inner-title
                                            a(href=`/products/${item.slug}`) #{item.title}
                                        .inner-price-new #{item.priceNew}$
                                        .inner-price-old #{item.price}$
                                        .inner-discount -#{item.discountPercentage}%